extends layout

block content
    h1= title
    form(method='POST' action='')
        p
            | username:
            input(type='text', name='username')
            | email:
            input(type='text', name='email')
            | password:
            input(type='password', name='password')
        input(type='submit', value='Submit')
        input(type='button', value='Cancel')